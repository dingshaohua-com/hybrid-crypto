{
  "compilerOptions": {
    "composite": true, // 配合tsconfig.json中的references使用
    "outDir": "./dist/server",
    "rootDir": "./src/server",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext"],
    "declaration": true,
    "declarationDir": "./types/server",
    "moduleResolution": "node",
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/server/**/*"],
  "exclude": ["node_modules", "dist", "test", "src/browser"]
}
