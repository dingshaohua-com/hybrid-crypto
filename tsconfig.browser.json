{
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist/browser",
    "rootDir": "./src/browser",
    "module": "umd",
    "target": "ESNext",
    "lib": ["dom", "es2015"],
    "declaration": true,
    "declarationDir": "./types/browser",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true
  },
  "include": ["src/browser/**/*"],
  "exclude": ["node_modules", "dist", "test", "src/server"]
}
